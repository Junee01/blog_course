<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<h2><%= pluralize(@post.erros.count, "error") %> prevented this post from saving:</h2>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<%= f.label :title, "제목" %><br>
	<%= f.text_field :title, :placeholder => "제목을 입력해주세요." %>

	<br><br>

	<%= f.label :content, "내용" %><br>
	<%= f.text_area :content, :placeholder => "내용을 입력해주세요." %>

	<br><br>

	<%= f.submit %>

<% end %>