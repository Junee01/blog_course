<h1 id="page_title">포스팅 목록</h1>

<div id="posts_wrapper" class="skinny_wrapper">
	<% @posts.each do |post| %>
		<div class="post">
			<p class="date"><%= post.created_at.strftime('%A, %B %d') %></p>
			<h2><a href="#"><%= link_to post.title, post %></a></h2>
			<hr>
		</div>
	<% end %>

	<% if user_signed_in? %>
		<div id="admin_links">
			<%= link_to "글 작성하기", new_post_path %>
		</div>
	<% end %>
</div>

<%= will_paginate @posts %>